<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadius="@dimen/progress_bar_radius"
        android:shape="ring"
        android:thickness="@dimen/progress_bar_thickness"
        android:useLevel="false" >
        <size
            android:height="@dimen/progress_bar_height"
            android:width="@dimen/progress_bar_width" />

        <gradient
            android:centerColor="@color/app_color"
            android:centerY="0.5"
            android:endColor="@color/app_color_lt"
            android:startColor="@color/app_color_dark"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>